{
  "compilerOptions": {
    "allowJs": true,
    "module": "esNext",
    "target": "es2015",
    "outDir": "build",
    "jsx": "preserve",
    "jsxFactory": "createElement",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "rax-app": [".rax/index.ts"]
    }
  },
  "include": ["src/*", ".rax"]
}
